---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<header class="site-header">
  <div class="container">
    <div class="header-content">
      <div class="logo">
        <a href="/">Kyaw Soe's Blog</a>
      </div>
      <nav class="main-nav">
        <ul>
          <li><a href="/">Home</a></li>
          <li class="nav-dropdown">
            <a href="/courses/" class="dropdown-toggle">Courses</a>
            <ul class="dropdown-menu">
              <li><a href="/courses/">All Courses</a></li>
              <li><a href="/courses/javascript-mastery/">JavaScript Mastery</a></li>
              <li><a href="/courses/nodejs-backend/">Node.js Backend</a></li>
              <li><a href="/courses/css-modern-layouts/">CSS Layouts</a></li>
            </ul>
          </li>
          <li class="nav-dropdown">
            <a href="/blog/" class="dropdown-toggle">Blog</a>
            <ul class="dropdown-menu">
              <li><a href="/blog/">All Posts</a></li>
              <li><a href="/blog/html/">HTML</a></li>
              <li><a href="/blog/css/">CSS</a></li>
              <li><a href="/blog/javascript/">JavaScript</a></li>
              <li><a href="/blog/nodejs/">Node.js</a></li>
              <li><a href="/blog/express/">Express.js</a></li>
              <li><a href="/blog/nestjs/">NestJS</a></li>
            </ul>
          </li>
          <li><a href="/about/">About</a></li>
        </ul>
      </nav>
      <div class="nav-actions">
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>

<style>
  .site-header {
    background-color: var(--sl-color-gray-1);
    border-bottom: 1px solid var(--sl-color-gray-4);
    padding: 1rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--sl-color-accent-high);
    text-decoration: none;
  }

  .main-nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .main-nav a {
    text-decoration: none;
    color: var(--sl-color-text);
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
    padding: 0.5rem 0;
  }

  .main-nav a:hover {
    color: var(--sl-color-accent);
  }

  .main-nav a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--sl-color-accent);
    transition: width 0.3s ease;
  }

  .main-nav a:hover::after {
    width: 100%;
  }

  /* Dropdown styles */
  .nav-dropdown {
    position: relative;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--sl-color-gray-1);
    border: 1px solid var(--sl-color-gray-4);
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    list-style: none;
    padding: 0.5rem 0;
    margin: 0.5rem 0 0 0;
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 100;
  }

  .nav-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-menu li {
    padding: 0;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.5rem 1rem;
    color: var(--sl-color-text);
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .dropdown-menu a:hover {
    background-color: var(--sl-color-gray-3);
    color: var(--sl-color-accent);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
    }

    .main-nav ul {
      gap: 1.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .dropdown-menu {
      position: static;
      box-shadow: none;
      border: none;
      background: transparent;
      opacity: 1;
      visibility: visible;
      transform: none;
      margin-top: 0.5rem;
    }
  }
</style>